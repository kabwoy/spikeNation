<%- include("../partials/head" , {title:"New Post"}) %> 
<div class="container mt-6">
<form action="/posts" method="post">

    <h1 class="has-text-centered is-size-2">Create Post</h1>
    <div>
        <label for="title">Title</label>
        <input type="text" class="input" name="title" id="title" />
    </div>

    <div>
        <label for="body">Body</label>
        <textarea class="textarea" name="content" id="body"></textarea>
    </div>

    <div>
        <label for="image">image</label>
        <input class="input" type="text" name="image" id="image">
    </div>

    <div class="control mt-2">
        <select name="tag" id="" class="select">
            <% for(tag of tags){ %> 
            <option value="<%= tag._id %>"><%= tag.name %></option>
            <% } %> 
        </select>
    </div>

    <input type="text" name="user" hidden>

    <div>
        <input class="button is-primary mt-2"  type="submit" value="Create Post" />
    </div>
</form>
</div>
<%- include("../partials/footer") %> 